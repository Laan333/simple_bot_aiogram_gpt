# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# OpenAI API Key (получить на https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Модель OpenAI (по умолчанию: gpt-4o-mini)
# Примеры моделей: gpt-4o-mini, gpt-4o, gpt-4.1-mini, gpt-4.1
OPENAI_MODEL=gpt-4o-mini

# Флаг "бесплатного" режима gpt-3.5-turbo (True/False).
# Если TRUE и выбрана модель gpt-3.5-turbo, для каждого пользователя действует лимит:
# не более одного запроса раз в 3 минуты.
FREE_VERSION_GPT=False

# Тип базы данных: postgresql или sqlite
# Рекомендуется sqlite для локальной разработки
DB_TYPE=sqlite

# Настройки PostgreSQL (используются, если DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_bot
DB_USER=postgres
DB_PASSWORD=postgres

# Настройки SQLite (используются, если DB_TYPE=sqlite)
# Относительный путь от корня проекта, файл создастся автоматически
SQLITE_PATH=db.sqlite3

# Максимальное количество сообщений в контексте (по умолчанию: 5, максимум: 20)
MAX_CONTEXT_MESSAGES=5
